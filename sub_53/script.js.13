					$('.unreadChat').hide();
				}
				
				$('.sidebar.chat #emoji_popup').html( emojione.toImage('<a href="javascript:void(0);" class="emoji">'+emos.join('</a><a href="javascript:void(0);" class="emoji">')+'</a>') );
				

					$('.sidebar.chat #emoji_popup_icon').on('click', function(){
						$('.sidebar.chat #emoji_popup').toggle();
						
						$('.sidebar.chat a.emoji').off().on('click', function(){
							$('.sidebar.chat #message').val($('.sidebar.chat #message').val()+$(this).children('img').attr('alt'));

